.preview-tips {
  margin: 20rpx 0;  
}

.video {
  margin: 50px auto;
  width: 100%;
  height: 300px;
}

.cover-view {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(100, 100, 100, 1);
}

.emotion {
  position: absolute;
  width: 100%;
  top: 50px;
  height: 50px;
  font-size: 20px;
  color: green;
  text-align: center;
  line-height:50px;
  white-space:pre-wrap;
}

.error-tips {
  position: absolute;
  width: 100%;
  top: 100px;
  height: 50px;
  font-size: 40px;
  color: red;
  text-align: center;
  line-height:50px;
  white-space:pre-wrap;
}

.caption {
  position: absolute;
  width: 100%;
  top: 240px;
  height: 50px;
  font-size: 20px;
  color: black;
  text-align: center;
  line-height:50px;
  white-space:pre-wrap;
}